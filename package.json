{
  "name": "npm-pkgbuild",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/pkgbuild.mjs",
  "module": "src/pkgbuild.mjs",
  "description": "create ArchLinux packages from npm packages",
  "keywords": [
    "aur",
    "pkgbuild",
    "pacman",
    "arch-linux",
    "ArchLinux"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-pkgbuild": "bin/npm-pkgbuild"
  },
  "scripts": {
    "prepare": "rollup -c",
    "test": "ava --timeout 2m",
    "posttest": "npm run prepare && markdown-doctest",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/pkgbuild.mjs --section=API",
    "lint": "documentation lint src/pkgbuild.mjs"
  },
  "dependencies": {
    "commander": "^4.0.1",
    "execa": "^4.0.0",
    "expression-expander": "^7.0.3",
    "globby": "^11.0.0",
    "iterable-string-interceptor": "^1.0.1",
    "npm-packlist": "^2.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "ava": "^3.5.2",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.0",
    "documentation": "^12.1.4",
    "rollup": "^2.3.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "semantic-release": "^17.0.4",
    "stream-buffers": "^3.0.2"
  },
  "engines": {
    "node": ">=12.16.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-pkgbuild.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-pkgbuild/issues"
  },
  "homepage": "https://github.com/arlac77/npm-pkgbuild#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-cli-app",
      "arlac77/template-github"
    ]
  }
}
