{
  "name": "npm-pkgbuild",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/pkgbuild.mjs"
  },
  "description": "create ArchLinux packages from npm packages",
  "keywords": [
    "ArchLinux",
    "arch-linux",
    "aur",
    "pacman",
    "pkgbuild"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-pkgbuild": "src/npm-pkgbuild-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "commander": "^8.0.0",
    "content-entry": "^2.6.2",
    "content-entry-filesystem": "^2.0.4",
    "execa": "^5.0.0",
    "expression-expander": "^7.0.9",
    "globby": "^11.0.2",
    "iterable-string-interceptor": "^1.0.8",
    "npm-packlist": "^2.1.2",
    "pacote": "^11.3.0",
    "tar-stream": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.7.3",
    "documentation": "^13.2.5",
    "semantic-release": "^17.4.4",
    "stream-buffers": "^3.0.2"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-pkgbuild.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-pkgbuild/issues"
  },
  "homepage": "https://github.com/arlac77/npm-pkgbuild#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
