{
  "name": "npm-pkgbuild",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/module.mjs"
  },
  "description": "create ArchLinux, RPM and Debian packages from npm packages",
  "keywords": [
    "ArchLinux",
    "arch-linux",
    "aur",
    "deb",
    "debian",
    "package",
    "pacman",
    "pkgbuild",
    "rpm",
    "rpmspec"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-pkgbuild": "src/npm-pkgbuild-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "@npmcli/arborist": "^6.1.6",
    "@vercel/nft": "^0.22.5",
    "aggregate-async-iterator": "^1.1.15",
    "commander": "^9.5.0",
    "content-entry": "^5.2.16",
    "content-entry-filesystem": "^5.2.13",
    "content-entry-transform": "^1.4.27",
    "execa": "^6.1.0",
    "expression-expander": "^7.1.3",
    "globby": "^13.1.3",
    "ini": "^3.0.1",
    "iterable-string-interceptor": "^2.2.3",
    "key-value-transformer": "^3.0.5",
    "node-fetch": "^3.3.0",
    "npm-package-walker": "^6.2.3",
    "npm-packlist": "^7.0.4",
    "pacote": "^15.0.8",
    "pkg-dir": "^7.0.0",
    "tar-stream": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "documentation": "^14.0.1",
    "semantic-release": "^20.0.2",
    "stream-buffers": "^3.0.2"
  },
  "engines": {
    "node": ">=16.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-pkgbuild"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-pkgbuild/issues"
  },
  "homepage": "https://github.com/arlac77/npm-pkgbuild#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
