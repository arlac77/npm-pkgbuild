{
  "name": "myservice",
  "description": "a description",
  "version": "1.2.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/myservice.git"
  },
  "dependencies": {
    "uti": "^6.6.1"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.13.2"
  },
  "config": {
    "port": 8088,
    "api": {
      "url": "http://somwhere.com/prefix/api"
    }
  },
  "pkgbuild": {
    "install.dir": "/services/${name}/",
    "groups": "webhook",
    "depends": {
      "redis": ">=5.0.3"
    },
    "hooks": "pacman.install",
    "content": {
      "${install.dir}": [
        "npm-pack",
        "node_modules"
      ],
      "/usr/lib/tmpfiles.d/${name}.conf": "tmpfiles.conf"
    }
  }
}
